<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="13dp"
    android:background="@drawable/bg_dialog"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:background="@drawable/bg_textview_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/txt_title"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="Add Shop"
        android:textColor="#E41B1B"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
    </TextView>

    <EditText
        android:layout_marginTop="5dp"
         app:layout_constraintTop_toBottomOf="@id/txt_title"
        android:background="@drawable/custom_edit_text"
        android:inputType="text"
        android:padding="10dp"
        android:hint="Username"
        android:id="@+id/edt_user_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></EditText>
    <EditText
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/edt_user_shop"
        android:background="@drawable/custom_edit_text"
        android:inputType="textPassword"
        android:padding="10dp"
        android:hint="Password"
        android:id="@+id/edt_pass_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></EditText>
    <EditText
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/edt_pass_shop"
        android:background="@drawable/custom_edit_text"
        android:inputType="text"
        android:padding="10dp"
        android:hint="Name Shop"
        android:id="@+id/edt_name_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></EditText>
    <EditText
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/edt_name_shop"
        android:background="@drawable/custom_edit_text"
        android:inputType="text"
        android:padding="10dp"
        android:hint="Phone shop"
        android:id="@+id/edt_phone_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></EditText>
    <EditText
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/edt_phone_shop"
        android:background="@drawable/custom_edit_text"
        android:inputType="text"
        android:padding="10dp"
        android:hint="Address Shop"
        android:id="@+id/edt_address_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></EditText>
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/edt_address_shop"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_add"
            android:background="@drawable/bg_button_add"
            android:layout_marginTop="10dp"
            android:text="Add"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
        </Button>
        <Button
            android:layout_marginLeft="5dp"
            android:id="@+id/btn_cancel"
            android:background="@drawable/bg_button_add"
            android:layout_marginTop="10dp"
            android:text="Cancel"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
        </Button>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>